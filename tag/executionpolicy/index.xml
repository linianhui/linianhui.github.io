&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>$VMPath = &lt;span style="color:#a31515">&amp;#34;d:\&lt;/span>$VMName&lt;span style="color:#a31515">&amp;#34;&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>$VMSwitch = &lt;span style="color:#a31515">&amp;#39;External Virtual Network Switch&amp;#39;&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>$InstallMedia = &lt;span style="color:#a31515">&amp;#39;d:\en_windows_server_2016_x64_dvd_9718492.iso&amp;#39;&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>$VHDFilePath = &lt;span style="color:#a31515">&amp;#39;d:\test.vhdx&amp;#39;&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#008000"># Create New Virtual Machine&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>New-VM -Name $VMName -Generation 2 -VHDPath $VHDFilePath -SwitchName $VMSwitch -MemoryStartupBytes 2147483648 -Path $VMPath
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#008000"># Add DVD Drive to Virtual Machine&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>Add-VMScsiController -VMName $VMName
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>Add-VMDvdDrive -VMName $VMName -ControllerNumber 1 -ControllerLocation 0 -Path $InstallMedia
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#008000"># Mount Installation Media&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>$DVDDrive = Get-VMDvdDrive -VMName $VMName
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>&lt;span style="color:#008000"># Configure Virtual Machine to Boot from DVD&lt;/span>
&lt;/span>&lt;/span>&lt;span style="display:flex;">&lt;span>Set-VMFirmware -VMName $VMName -FirstBootDevice $DVDDrive
